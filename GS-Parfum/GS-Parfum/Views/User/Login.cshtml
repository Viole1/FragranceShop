@model GS_Parfum.Domain.Request.LoginRequest


@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="Username">Username:</label>
        <input type="text" asp-for="Username" class="form-control" name="model.Username" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Password:</label>
        <input type="text" asp-for="Password" class="form-control" name="model.Password" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>